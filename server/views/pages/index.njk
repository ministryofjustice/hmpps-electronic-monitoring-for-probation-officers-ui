</head>
  <h1>Locations of interest</h1>

  <table class="govuk-table">
    <caption class="govuk-table__caption govuk-table__caption--m">Offender: John Doe</caption>
    <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header">Date</th>
        <th scope="col" class="govuk-table__header">Destination</th>
        <th scope="col" class="govuk-table__header">Time Period</th>
        <th scope="col" class="govuk-table__header"></th>
      </tr>
    </thead>
    <tbody class="govuk-table__body">
      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__header">22/01/2025</th>
        <td class="govuk-table__cell">Pub</td>
        <td class="govuk-table__cell">19:00 - 22:34</td>
        <td class="govuk-table__cell"><button class="govuk-button" data-module="govuk-button">Select</button></td>
      </tr>
      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__header">22/01/2024</th>
        <td class="govuk-table__cell">Casino</td>
        <td class="govuk-table__cell">22:34 - 23:04</td>
        <td class="govuk-table__cell"><button class="govuk-button" data-module="govuk-button">Select</button></td>
      </tr>
      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__header">18/12/2024</th>
        <td class="govuk-table__cell">Betting Shop</td>
        <td class="govuk-table__cell">19:03 - 22:34</td>
        <td class="govuk-table__cell"><button class="govuk-button" data-module="govuk-button">Select</button></td>
      </tr>
      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__header">18/12/2024</th>
        <td class="govuk-table__cell">Hospital</td>
        <td class="govuk-table__cell">22:24 - 05:34</td>
        <td class="govuk-table__cell"><button class="govuk-button" data-module="govuk-button">Select</button></td>
      </tr>
    </tbody>
  </table>

  <div id="map" style="height: 500px;"></div>
  
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script>

    // Initialize the map.
    const mapOptions = {
        minZoom: 7,
        maxZoom: 20,
        center: [ `{{mapData.route[0].lat}}`, `{{mapData.route[0].lng}}` ],
        zoom: 14,
    };
    const map = L.map('map', mapOptions);

    // Load and display ZXY tile layer on the map.
    const basemap = L.tileLayer('https://api.os.uk/maps/raster/v1/zxy/Light_3857/{z}/{x}/{y}.png?key=' + '{{ API_KEY }}', {
        maxZoom: 20,
    }).addTo(map);

    // Add the route as a polyline
    const routeCoordinates = [
      {% for point in mapData.route %}
        [{{ point.lat }}, {{ point.lng }}]{% if not loop.last %},{% endif %}
      {% endfor %}
    ];
    L.polyline(routeCoordinates, { color: 'blue' }).addTo(map);

    // Add markers for each point in the route
    {% for point in route %}
      L.marker([{{ point.lat }}, {{ point.lng }}]).addTo(map)
        .bindPopup('{{ point.name }}: {{ point.lat }}, {{ point.lng }}');
    {% endfor %}

  </script>
{# </body>
</html> #}
